        <!-- start top  banner-->
        <StackPanel Orientation="Vertical"
                    Margin="20">
            <TextBlock Text="Login"
                       Style="{StaticResource LoginTextBlock}"/>
            <!--FontSize="25"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontWeight="Bold"
